{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "lib": ["es2021"],
    "outDir": "../../dist/out-tsc",
    "module": "commonjs",
    "types": ["node"],
    "emitDecoratorMetadata": true,
    "target": "es2021",
    "strictNullChecks": true,
    "strict": true,
    "strictPropertyInitialization": false
  },
  "exclude": ["jest.config.ts", "src/**/*.spec.ts", "src/**/*.test.ts"],
  "include": ["src/**/*.ts", "src/**/templates/*.tsx"]
}
